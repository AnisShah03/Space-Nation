<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SpaceNation" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">#E96B77BD</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.SpaceNation.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.SpaceNation.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.SpaceNation.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    ///////////

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">5dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:background">@color/teal_700</item>
    </style>


    ///////////

    <style name="MainHeadingSize">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">24dp</item>
    </style>

    ///////////

    <style name="TitleSize">
        <item name="android:textSize">20dp</item>
    </style>

    ///////////

    <style name="DescriptionSize">
        <item name="android:textSize">18dp</item>
    </style>
    //////////////////

    <style name="SplashScreen" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/bg_splashscreen</item>

    </style>


</resources>